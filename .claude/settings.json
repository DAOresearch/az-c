{
  "statusLine": {
    "type": "command",
    "command": "npx cc-usage@latest statusline"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/scripts/lint.ts",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(cat:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npx tsc:*)"
    ],
    "deny": [],
    "ask": []
  }
}
