{
  "name": "aztec-agent",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "bun x biome check --write",
    "typecheck": "bun x tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "dev": "bun --watch run src/index.tsx",
    "test:visual": "bun src/testing/cli/visualTest.ts",
    "test:visual:capture": "bun src/testing/visualTestRunner.ts",
    "test:visual:evaluate": "bun src/testing/cli/visualTest.ts --skip-capture"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "lefthook": "^1.13.5",
    "lint-staged": "^16.2.3",
    "ultracite": "5.4.5",
    "winston": "^3.18.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@opentui/core": "^0.1.25",
    "@opentui/react": "^0.1.25",
    "chalk": "^5.6.2",
    "glob": "^11.0.3",
    "react": "^19.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
